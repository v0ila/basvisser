            <ul class="right hide-on-med-and-down" style="padding-right:20px;">
                <li>
                    <%=l ink_to "Home", root_path %>
                </li>
                <li>
                    <%=l ink_to "Appartementen", appartementen_path %>
                </li>
                <li>
                    <%=l ink_to "Reserveren", reserveren_path %>
                </li>
                <li>
                    <%=l ink_to "Amelanderkaap", amelanderkaap_path %>
                </li>
                <li>
                    <%=l ink_to "Contact", contact_path %>
                </li>
            </ul>
            <ul class="side-nav" id="mobile">
                <li>
                    <%=l ink_to "Home", root_path %>
                </li>
                <li>
                    <%=l ink_to "Appartementen", appartementen_path %>
                </li>
                <li>
                    <%=l ink_to "Reserveren", reserveren_path %>
                </li>
                <li>
                    <%=l ink_to "Amelanderkaap", amelanderkaap_path %>
                </li>
                <li>
                    <%=l ink_to "Contact", contact_path %>
                </li>
            </ul>
        </div>
    </nav>
    <div class="divider "></div>
    <br>
    <%= yield %>


